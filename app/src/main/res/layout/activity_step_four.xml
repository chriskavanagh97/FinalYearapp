<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/calculatorbackground"
    tools:context=".Carbonfootprint.StepFour">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Home"
        android:textColor="#0C0000"
        android:textSize="30sp" />

    <TextView
        android:layout_width="273dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="How would you best describe your diet"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#0C0000"
        android:textSize="20sp" />


    <Spinner
        android:id="@+id/values"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="127dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/next" />

    <LinearLayout
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transport"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="#F7F3F3"
            android:text="transport" />

        <TextView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="#F7F3F3"
            android:text="home" />

        <TextView
            android:id="@+id/purchasing"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="#F7F3F3"
            android:text="purchasing"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="#F7F3F3"
            android:text="food" />

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="#F7F3F3"
            android:text="total" />


    </LinearLayout>


</LinearLayout>

