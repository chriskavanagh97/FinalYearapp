<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/calculatorbackground"
    tools:context=".Carbonfootprint.StepTwo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Food"
        android:textColor="#0C0000"
        android:textSize="30sp" />

    <TextView
        android:layout_width="273dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="How would you best describe your diet"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#0C0000"
        android:textSize="20sp" />


    <Spinner
        android:id="@+id/values"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />


    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="submit" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="15dp"
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Your diet is an important factor into your carbonfootprint"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#050505"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="325dp"
            android:layout_height="86dp"
            android:layout_marginBottom="15dp"
            android:text="This question is finding out about your private car/motorbike use — we’ll ask about public transport next. If you walk or cycle everywhere, just click ‘Neither’."
            android:textColor="#070000" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="168dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/travelsection" />
    </LinearLayout>


</LinearLayout>

