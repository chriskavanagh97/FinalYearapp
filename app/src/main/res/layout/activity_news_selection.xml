<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News.NewsSelection"
    android:background="@drawable/newselectionbackground">

    <ImageView
        android:id="@+id/custom"
        android:layout_width="243dp"
        android:layout_height="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555"
        app:srcCompat="@drawable/customizeit" />


    <ImageView
        android:id="@+id/latest"
        android:layout_width="243dp"
        android:layout_height="92dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/latest" />

    <ImageView
        android:id="@+id/favourites"
        android:layout_width="243dp"
        android:layout_height="92dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom"
        app:layout_constraintVertical_bias="0.675"
        app:srcCompat="@drawable/favourites" />
</androidx.constraintlayout.widget.ConstraintLayout>