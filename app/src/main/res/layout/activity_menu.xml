<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainMenu">


    <LinearLayout
        android:id="@+id/mainmenu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:translationX="-280dp">

        <ImageView
            android:layout_width="181dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/energy">

        </ImageView>

        <Button
            android:id="@+id/SignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bgbtnmenu"
            android:text="Sign out"
            android:textSize="18sp"
            android:textStyle="italic"></Button>

        <Button
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bgbtnmenu"
            android:text="Setting"
            android:textSize="18sp"
            android:textStyle="italic"></Button>

        <Button
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/bgbtnmenu"
            android:text="Profile"
            android:textSize="18sp"
            android:textStyle="italic"></Button>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mainContent"
        android:layout_width="416dp"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:translationX="-280dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:logo="@drawable/ic_menu">

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Leaderboard"
                    android:layout_width="101dp"
                    android:layout_height="115dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="255dp"
                    android:src="@drawable/leaderboard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="304dp"
                    android:text="Leaderboard"
                    android:textColor="#181C34"
                    android:textSize="16sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recycle"
                    android:layout_width="101dp"
                    android:layout_height="115dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="255dp"
                    android:src="@drawable/recyclemenu" />

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="304dp"
                    android:text="Recycle"
                    android:textColor="#181C34"
                    android:textSize="16sp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Quiz"
                    android:layout_width="101dp"
                    android:layout_height="115dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="255dp"
                    android:src="@drawable/quizmenu" />

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="304dp"
                    android:text="Quiz Menu"
                    android:textColor="#181C34"
                    android:textSize="16sp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>


