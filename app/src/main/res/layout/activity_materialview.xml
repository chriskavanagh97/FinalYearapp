<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00FFFFFF"
    tools:context=".RecycleMaterial.Materialview">


    <LinearLayout
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#A4dada"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView

            android:id="@+id/Title"
            android:layout_width="293dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#070606"
            android:textSize="36sp">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text='"Spread the word!"'>

        </TextView>

        <ImageButton
            android:id="@+id/Facebook"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            tools:srcCompat="@drawable/facebook" />

        <ImageButton
            android:id="@+id/Twitter"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/twitter" />

        <ImageButton
            android:id="@+id/LinkedIn"
            android:layout_width="75dp"
            android:layout_gravity=""
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/linedin" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical">




        <ImageView

            android:layout_width="128dp"
            android:layout_height="34dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"

            app:srcCompat="@drawable/what" />

        <TextView
            android:id="@+id/what"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Leaderboard"
            android:textColor="#181C34"
            android:textSize="16sp">

        </TextView>

        <ImageView

            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"


            app:srcCompat="@drawable/what" />

        <TextView
            android:id="@+id/Where"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:text="Leaderboard"
            android:textColor="#181C34"
            android:textSize="16sp">

        </TextView>


        <ImageView

            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"

            app:srcCompat="@drawable/how" />

        <TextView
            android:id="@+id/How"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="20dp"
            android:text="Leaderboard"
            android:layout_marginTop="15dp"
            android:textColor="#181C34"
            android:textSize="16sp">

        </TextView>


        <ImageView

            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/generalcomment" />

        <TextView
            android:id="@+id/Tip"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="204dp"
            android:layout_marginTop="15dp"
            android:text="Leaderboard"
            android:textColor="#181C34"
            android:textSize="16sp">

        </TextView>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:text="Home" />

    <Button
        android:id="@+id/ItemList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:text="Item List" />

</LinearLayout>

    </LinearLayout>
