<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/calculatorbackground"
    tools:context=".Carbonfootprint.StepOne">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Food"
        android:textColor="#0C0000"
        android:textSize="30sp" />

 <TextView
            android:layout_width="273dp"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="How would you best describe your diet"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#0C0000"
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/values"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />


    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="submit" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="15dp"
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Your diet is an important factor into your carbonfootprint"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#050505"
            android:textSize="20sp" />

        <TextView
            android:layout_marginBottom="15dp"
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:text="Did you know? A large proportion of greenhouse gas emissions comes from food production, and meat and dairy are associated with much higher carbon emissions than plant-based food"
            android:textColor="#070000" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="255dp"
            android:layout_height="101dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/foodsection" />
    </LinearLayout>


</LinearLayout>

